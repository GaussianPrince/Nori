
struct Out
{
  float4 position : POSITION;
  float3 normal;
  float2 mapping;
};

Out main(uniform float4x4 MVP,
         uniform float4x4 MV,
         in float3 position,
         in float3 normal,
         in float2 mapping)
{
  Out result;
  result.position = mul(MVP, float4(position, 1));
  result.normal = mul(MV, float4(normal, 0));
  result.mapping = mapping;
  return result;
}

