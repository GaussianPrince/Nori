
struct Out
{
  float4 position : POSITION;
  float4 lightpos;
  float3 normal;
};

Out main(uniform float4x4 MVP, uniform float4x4 M, uniform float4x4 LV, in float3 position, in float3 normal)
{
  Out result;

  result.position = mul(MVP, float4(position, 1));
  result.lightpos = mul(LV, mul(M, float4(position, 1)));
  result.normal = mul(M, float4(normal, 0));
  return result;
}

