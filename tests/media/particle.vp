
struct Out
{
  float4 position : POSITION;
  float2 mapping;
  float4 color;
};

Out main(uniform float4x4 MVP, in float3 position, in float2 mapping, in float4 color)
{
  Out result;
  result.position = mul(MVP, float4(position, 1));
  result.mapping = mapping;
  result.color = color;
  return result;
}

